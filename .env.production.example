# 生產環境配置模板
# 請複製此文件為 .env.production 並填入實際的生產環境值

# 應用配置
NODE_ENV=production
NEXT_PUBLIC_APP_NAME=房地產銷控管理系統
NEXT_PUBLIC_APP_VERSION=1.0.0

# 數據庫配置 - 生產環境
# 請使用強密碼和安全的數據庫連接
DATABASE_URL="mysql://prod_user:STRONG_PASSWORD@prod-db-server:3306/real_estate_prod"

# JWT 密鑰 - 生產環境
# 請使用強隨機密鑰，至少32字符
JWT_SECRET="REPLACE_WITH_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS"
JWT_EXPIRES_IN=24h

# API 配置 - 生產環境
API_BASE_URL=https://yourdomain.com/api
NEXT_PUBLIC_API_URL=https://yourdomain.com/api

# 文件上傳配置
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 郵件配置 - 生產環境
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=SMTP_PASSWORD
SMTP_FROM=noreply@yourdomain.com

# 第三方服務 - 生產環境
# Google Maps API (生產密鑰)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=YOUR_PRODUCTION_GOOGLE_MAPS_API_KEY

# 分析服務 - 生產環境
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=YOUR_GOOGLE_ANALYTICS_ID

# 安全配置 - 生產環境
CORS_ORIGIN=https://yourdomain.com
CSRF_SECRET="REPLACE_WITH_STRONG_CSRF_SECRET"

# 日誌配置 - 生產環境
LOG_LEVEL=error
LOG_FILE_PATH=/var/log/app/production.log

# Redis 配置 - 生產環境
REDIS_URL=redis://prod-redis-server:6379/0

# 備份配置 - 生產環境
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=90

# SSL/TLS 配置
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# 監控配置
MONITORING_ENDPOINT=https://monitoring.yourdomain.com/webhook
ALERT_EMAIL=admin@yourdomain.com

# 性能配置
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30000
CACHE_TTL=3600