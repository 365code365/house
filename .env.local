# 開發環境配置
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=房地產銷控管理系統
NEXT_PUBLIC_APP_VERSION=1.0.0

# 數據庫配置 - 開發環境
DATABASE_URL="mysql://root:password@localhost:3306/real_estate_dev"

# JWT 密鑰 - 開發環境
JWT_SECRET=dev_jwt_secret_key_2024
JWT_EXPIRES_IN=7d

# API 配置 - 開發環境
API_BASE_URL=http://localhost:3000/api
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# 文件上傳配置
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 郵件配置 - 開發環境 (測試用)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@example.com
SMTP_PASS=dev_password
SMTP_FROM=dev@example.com

# 第三方服務 - 開發環境
# Google Maps API (開發密鑰)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=

# 分析服務 - 開發環境
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# 安全配置 - 開發環境
CORS_ORIGIN=http://localhost:3000
CSRF_SECRET=dev_csrf_secret_key

# 日誌配置 - 開發環境
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev.log

# Redis 配置 - 開發環境 (可選)
REDIS_URL=redis://localhost:6379/0

# 備份配置 - 開發環境
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7

# 開發模式特定配置
DEBUG=true
VERBOSE_LOGGING=true